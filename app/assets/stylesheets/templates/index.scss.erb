@import '../lib/fonts';

@mixin transition($time){
  -webkit-transition: background-color $time linear, color $time linear;
    -moz-transition: background-color $time linear, color $time linear;
    -ms-transition: background-color $time linear, color $time linear;
    -o-transition: background-color $time linear, color $time linear;
    transition: background-color $time linear, color $time linear;
}

@function turquoise($mult, $op){
  @return rgba(64*$mult, 224*$mult, 208*$mult, $op);
}

body{
  font-family: 'Lato', sans-serif;
  background: url(<%= asset_path 'bg.jpg' %>);
  background-attachment: fixed;
}

header{
  height: 80vh;
}

.blog-title{
  padding: 15vh 5vw 0 5vw;
  text-align: center;
  font-size: 1.1em;
  font-family: 'merriweather', sans-serif;
  &>span{
    font-family: 'prociono', serif;
    font-size: 4em;
    vertical-align: middle;
    text-decoration: underline;
    margin: 10px;
  }
}

@media screen and (max-width: 600px) {
  .blog-title>span{
    display: block;
    font-size: 2em;
  }
}

#sns-link{
  padding-top: 30px;
  @extend .center;
  &>a{
    padding: 0 10px 0 10px;
    color: turquoise(0.5,1);
    @include transition(0.25s);
    @extend .underline;
    @extend .bold;
    &:hover{
      color: turquoise(1,1);
    }
    &>img{
      width: 32px;
      margin-right: 5px;
    }
  }
}

@media screen and (max-width: 600px){
  #sns-link>a{
    display: block;
    padding-bottom: 10px;
  }
}

.row{
  max-width: 100vw;
}
.row:first-child>.columns:first-child{
  background-color: turquoise(1,0.5);
  @include transition(0.25s);
  &, &>.section-brief>a{
      color: black;
    }
  &:hover{
    background-color: black;
    &, &>.section-brief>a{
      color: turquoise(1,1);
    }
  }
}
  .columns{
    height: 50vh;
    background-color: rgba(255,255,255,0.7); 
    padding: 5px;
    @include transition(0.25s);
    &:hover{
      background-color: turquoise(1,0.5);
    }
  }
    .section-title{
      border-bottom: 1px solid black;
      padding: 15px 20px 15px 20px;
      font-size: 1.25em;
      font-family: 'Merriweather', sans-serif;
    }
    .section-brief{
      padding: 15px 20px 15px 20px;
      position:relative;
      height: 80%;
      &:hover>a{
        color: white;
      }
      &>a{
        position: absolute;
        bottom: 0;
        left: 20px;
        color: turquoise(1,1);
        font-weight: bold;
        text-decoration: underline;
        cursor: pointer;
      }
    }

.content{
  margin-left: 20px;
  margin-right: 20px;
  text-align: justify;
}