@import '../lib/fonts';

body{
  font-family: 'Lato', sans-serif;
  background: url(<%= asset_path 'bg.png' %>);
  background-attachment: fixed;
}

header{
  height: 70vh;
}

  header>div{
    padding-top: 20vh;
    text-align: center;
    font-size: 1.25em;
    font-family: 'raleway', sans-serif;
  }
    header>div>span{
      font-family: 'merriweather', sans-serif;
      font-size: 3.5em;
      text-decoration: underline;
      vertical-align: middle;
      margin: 10px;
    }
    @media screen and (max-width: 600px) {
      header>div>span{
        display: block;
        font-size: 2em;
      }
    }

.menu>li{
  margin: 10px;
}
.row{
  max-width: 100vw;
}
  .columns{
    height: 50vh;
    background-color: rgba(167,205,252,0.75); 
    padding: 5px;
      -webkit-transition: background-color 0.25s linear, color 0.25s linear;
        -moz-transition: background-color 0.25s linear, color 0.25s linear;
        -ms-transition: background-color 0.25s linear, color 0.25s linear;
        -o-transition: background-color 0.25s linear, color 0.25s linear;
        transition: background-color 0.25s linear, color 0.25s linear;
  }
    @media screen and (max-width: 600px) {
      .columns{
        height: 60vh;
      }
    }
    .columns:hover{
      background-color: rgba(10,76,235,0.75);
    }
    .columns:hover>div>span:last-child,  .section-brief:hover>a{
        color: white;
    }
    .section-title{
      background-color: rgba(0,0,0,0.35);
      padding: 15px 20px 15px 20px;
      font-size: 1.25em;
      font-family: 'Merriweather', sans-serif;
    }
    .section-brief{
      padding: 15px 20px 15px 20px;
      position:relative;
      height: 80%;
    }
      .section-brief>span:last-child, .section-brief>a{
        position: absolute;
        bottom: 0;
        left: 20px;
        color: rgba(17, 101, 226, 1);
        font-weight: bold;
        text-decoration: underline;
        cursor: pointer;
      }

.content{
  margin-left: 20px;
  margin-right: 20px;
  text-align: justify;
}