@import '../lib/fonts';

@mixin transition($time) {
  -webkit-transition: background-color $time linear, color $time linear;
    -moz-transition: background-color $time linear, color $time linear;
    -ms-transition: background-color $time linear, color $time linear;
    -o-transition: background-color $time linear, color $time linear;
    transition: background-color $time linear, color $time linear;
}

@function turquoise($mult, $op){
  @return rgba(64*$mult, 224*$mult, 208*$mult, $op);
}

body {
  font-family: 'Lato', sans-serif;
  background: url(<%= asset_path 'bg.jpg' %>);
  background-attachment: fixed;
}

header {
  height: 80vh;
}

.blog-title {
  padding: 15vh 5vw 0 5vw;
  text-align: center;
  font-size: 1.1em;
  font-family: 'merriweather', sans-serif;
  &>span {
    font-family: 'prociono', serif;
    font-size: 4em;
    vertical-align: middle;
    text-decoration: underline;
    margin: 10px;
  }
}

#sns-link {
  padding-top: 30px;
  @extend .center;
  &>a {
    padding: 0 10px 0 10px;
    color: turquoise(0.5,1);
    @include transition(0.25s);
    @extend .underline;
    @extend .bold;
    &:hover {
      color: turquoise(1,1);
    }
    &>img {
      width: 32px;
      margin-right: 5px;
    }
  }
}

@media screen and (max-width: 600px){
  #sns-link>a {
    display: block;
    padding-bottom: 10px;
  }
}

.row {
  max-width: 100vw;
}
.row:first-child > .columns:first-child {
  background-color: turquoise(1,0.5);
  @include transition(0.25s);
  &, .read-more {
    color: black;
  }
  &:hover {
    background-color: black;
    &, & > .read-more {
      color: turquoise(1,1);
    }
  }
}
  .columns {
    border-top: 1px solid black;
    position: relative;
    height: 50vh;
    background-color: rgba(255,255,255,0.7); 
    padding: 5px;
    @include transition(0.25s);
    &:hover {
      background-color: turquoise(1,0.5);
    }
    &:hover > .read-more {
      color: white;
    }
  }
    .section-title {
      padding: 15px 20px 15px 20px;
      font-size: 1.25em;
      font-family: 'Merriweather', sans-serif;
      background-color: rgba(128, 128, 128, 0.25);
    }
    .section-brief {
      padding: 15px 20px 15px 20px;
      position:relative;
      height: 80%;
    }

.read-more {
  position: absolute;
  bottom: 20px;
  left: 20px;
  color: turquoise(1,1);
  font-weight: bold;
  text-decoration: underline;
  cursor: pointer;
}

.content {
  margin-left: 20px;
  margin-right: 20px;
  text-align: justify;
}



@media screen and (max-width: 600px) {
  .blog-title>span {
    display: block;
    font-size: 2em;
  }
  .columns {
    padding: 0;
    border-color: rgb(128, 128, 128);
    
  }
  .section-title {
    background: linear-gradient(to bottom, rgb(128, 128, 128), rgba(128, 128, 128, 0));
  }
}